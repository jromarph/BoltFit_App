<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/squats_btn"
        android:layout_width="342dp"
        android:layout_height="125dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/squats" />

    <ImageButton
        android:id="@+id/lunges_btn"
        android:layout_width="342dp"
        android:layout_height="125dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/lunges" />

    <ImageButton
        android:id="@+id/glute_btn"
        android:layout_width="342dp"
        android:layout_height="125dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/glute" />

    <ImageButton
        android:id="@+id/donkey_btn"
        android:layout_width="342dp"
        android:layout_height="125dp"
        android:layout_marginTop="10dp"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/donkey" />

</LinearLayout>
