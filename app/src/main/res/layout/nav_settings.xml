<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:id="@+id/settings_layout"
    tools:context=".Dashboard">

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/linearLayout3"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/main_menu" />

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="30dp">

        <ImageButton
            android:id="@+id/menu_button"
            android:layout_width="35dp"
            android:layout_height="37dp"
            android:layout_marginEnd="32dp"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/menu_btn" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/montserrat_extrabold"
            android:text="Personal Settings"
            android:textColor="@color/white"
            android:textSize="25sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/montserrat_extrabold"
            android:text="Change Personal Information"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_margin="2dp"
            android:background="#e5e6c7" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="60dp"
                android:text="Name:"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/new_name"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="50dp"
                android:background="@drawable/edittext_bg"
                android:hint="Enter your new name"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textColorHint="#D9D9D9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="125dp"
                android:text="Username:"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/new_username"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="115dp"
                android:background="@drawable/edittext_bg"
                android:hint="Enter your new username"
                android:inputType="text"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textColorHint="#D9D9D9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="185dp"
                android:text="Password:"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/new_password"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="175dp"
                android:background="@drawable/edittext_bg"
                android:hint="Enter your new username"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textColorHint="#D9D9D9" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="235dp"
                android:text="Confirm \nPassword:"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/confirm_password"
                android:layout_width="250dp"
                android:layout_height="45dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="235dp"
                android:background="@drawable/edittext_bg"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:padding="12dp"
                android:textColor="@color/white"
                android:textColorHint="#D9D9D9" />

            <Button
                android:id="@+id/changeButton"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="295dp"
                android:background="@drawable/btn_bg_white"
                android:text="Change"
                android:textSize="20sp"
                android:textStyle="bold" />

        </RelativeLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

